---
const { title, subtitle, align } = Astro.props;
---

<div
  class=`flex flex-col justify-center items-center font-inter mb-8 ${align == "left" ? "text-left" : "text-center"}`
>
  <img
    src=`${import.meta.env.BASE_URL}/images/paissas_logo.svg`
    alt="Paissas Logo"
    class="size-6"
  />
  <p
    class="uppercase m-0 mb-2 mt-5 text-sm tracking-[0.2rem] leading-none font-bold text-gray-400"
  >
    {title}
  </p>
  <h3 class="m-0 font-bold text-4xl text-primary-800 capitalize">{subtitle}</h3>
</div>
